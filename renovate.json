{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": ["dependencies"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "ignorePaths": [
    "templates/build/**",
    "**/test/resources/**"
  ],
  "packageRules": [
    {
      "description": "Group all minor and patch updates into a single PR",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all minor and patch dependencies"
    },
    {
      "description": "Group all major updates into a single PR",
      "matchUpdateTypes": ["major"],
      "groupName": "all major dependencies"
    }
  ],
  "gradle": {
    "fileMatch": [
      "(^|/)build\\.gradle\\.kts$",
      "(^|/)settings\\.gradle\\.kts$"
    ]
  }
}